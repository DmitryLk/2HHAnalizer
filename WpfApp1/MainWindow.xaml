                            <DataGridCheckBoxColumn Header="Инт" Binding="{Binding Interes}" Width="20" IsReadOnly="False"/>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="100" IsReadOnly="True"/>
